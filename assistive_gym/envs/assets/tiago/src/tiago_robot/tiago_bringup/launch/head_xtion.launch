<launch>
  <!-- Copies calibration files to $ROS_HOME if missing -->
  <node pkg="camera_calibration_files" type="copy_calibration_files.sh" name="copy_calibration_files" output="screen">
  </node>

  <param name="/xtion/driver/use_device_time" value="false"/> <!-- avoids tf errors -->
  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="camera" value="xtion"/>
    <arg name="publish_tf" value="false"/>
    <arg name="depth_registration" value="true"/>
    <arg name="rgb_camera_info_url" value="file://$(env HOME)/.ros/camera_info/rgb_xtion.yaml"/>
    <arg name="depth_camera_info_url" value="file://$(env HOME)/.ros/camera_info/depth_xtion.yaml"/>
  </include>
</launch>
