<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="world"  default="empty"/>  <!-- empty, ... (see ../worlds) -->
  <arg name="gzpose" default="-x 0.0 -y 0.0 -z 0.05 -R 0.0 -P 0.0 -Y 0.0"/>
  <arg name="gui" default="true"/>
  <arg name="debug" default="false"/>

  <env name="GAZEBO_MODEL_PATH" value="$(optenv GAZEBO_MODEL_PATH)"/>

  <!-- start up world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- spawn robot in simulation -->
  <include file="$(find pal_gripper_gazebo)/launch/gripper_spawn.launch">
    <arg name="gzpose" value="$(arg gzpose)"/>
  </include>

  <!-- bring up robot -->
  <include file="$(find pal_gripper_controller_configuration)/launch/gripper_controller.launch">
  </include>

</launch>
